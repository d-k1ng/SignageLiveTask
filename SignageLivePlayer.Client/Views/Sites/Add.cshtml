@model SiteViewModel
@{
    ViewBag.Title = "Add a Site";
}

@if (@TempData["Message"] != null)
{
    <div class="alert-danger">@TempData["Message"]</div>
}


<h2>Add a Site <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back</a></h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">

    <input asp-for="Id" hidden="hidden" />

    <div>
        <label asp-for="SiteName"></label>
        <input asp-for="SiteName" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SiteAddress1"></label>
        <input asp-for="SiteAddress1" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteAddress1" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SiteAddress2"></label>
        <input asp-for="SiteAddress2" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteAddress2" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SiteTown"></label>
        <input asp-for="SiteTown" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteTown" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SiteCounty"></label>
        <input asp-for="SiteCounty" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteCounty" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SitePostcode"></label>
        <input asp-for="SitePostcode" class="form-control border-0 shadow" />
        <span asp-validation-for="SitePostcode" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SiteCountry"></label>
        <input asp-for="SiteCountry" class="form-control border-0 shadow" />
        <span asp-validation-for="SiteCountry" class="text-danger"></span>
    </div>

    <div class="text-left panel-body">
        <button type="submit" class="btn btn-sm btn-outline-primary mt-2">Add</button>
    </div>
</form>

@if (Model is not null && Model.Id != "")
{
    <h2>Site</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Site Id</th>
                <th>Site Name</th>
                <th>Site Address 1</th>
                <th>Site Address 2</th>
                <th>Site Town</th>
                <th>Site County</th>
                <th>Site Postcode</th>
                <th>Site Country</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.SiteName</td>
                <td>@Model.SiteAddress1</td>
                <td>@Model.SiteAddress2</td>
                <td>@Model.SiteTown</td>
                <td>@Model.SiteCounty</td>
                <td>@Model.SitePostcode</td>
                <td>@Model.SiteCountry</td>
            </tr>
        </tbody>
    </table>
}
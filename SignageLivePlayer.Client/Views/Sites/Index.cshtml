@model List<SiteReadDto>

@{
    ViewData["Title"] = "All Sites";
}

<h2>All Sites</h2>
<a asp-action="Add" class="btn btn-sm btn-primary">Add Site</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Site Id</th>
            <th>Site Name</th>
            <th>Site Address</th>
            <th>Date Created</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.SiteName</td>
                <td><p>@s.SiteAddress1</p> <p>@s.SiteTown</p> <p>@s.SiteCounty</p> <p>@s.SitePostcode</p> <p>@s.SiteCountry</p></td>
                <td>@s.DateCreated</td>
                <td>
                    <a asp-action="Update" asp-route-id="@s.Id">
                        <div class="btn btn-primary">Edit</div>
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" value="@s.Id" name="id" />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
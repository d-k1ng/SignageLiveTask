@model List<PlayerReadDto>


@{
    ViewData["Title"] = "All Players";
}

<h2>All Players</h2>
<a asp-action="AddPlayer" class="btn btn-sm btn-primary">Add Player</a>
<a asp-action="GetPlayer" class="btn btn-sm btn-secondary">Get Player</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Unique Id</th>
            <th>Player Name</th>
            <th>Site</th>
            <th>Check In Frequency</th>
            <th>Date Created</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PlayerUniqueId</td>
                <td>@p.PlayerName</td>
                <td>site</td>
                <td>@p.CheckInFrequency</td>
                <td>@p.DateCreated</td>
                <td>
                    <a asp-action="UpdatePlayer" asp-route-id="@p.PlayerUniqueId">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeletePlayer" method="post">
                        <input type="hidden" value="@p.PlayerUniqueId" name="id" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>